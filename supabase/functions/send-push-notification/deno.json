{
    "imports": {
        "supabase": "jsr:@supabase/supabase-js@2",
        "web-push": "npm:web-push@3.6.7"
    },
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "deno.window"
        ],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "lint": {
        "files": {
            "include": [
                "index.ts"
            ]
        },
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    },
    "fmt": {
        "files": {
            "include": [
                "index.ts"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 100,
            "indentWidth": 2,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    }
}